{
    "name": "IdentityNowIdentities",
    "version": "0.3.6",
    "main": "dist/index.js",
    "scripts": {
        "clean": "shx rm -rf ./dist",
        "prebuild": "npm run clean",
        "build": "npx ncc build ./src/index.ts -o ./dist -m -C",
        "dev": "spcx run dist/index.js",
        "prettier": "npx prettier --write .",
        "test": "jest --coverage",
        "prepack-zip": "npm ci && npm run build",
        "pack-zip": "spcx package"
    },
    "private": true,
    "dependencies": {
        "@sailpoint/connector-sdk": "1.1.11",
        "axios": "1.6.7",
        "axios-retry": "4.0.0",
        "fast-levenshtein": "3.0.0",
        "sailpoint-api-client": "1.3.0",
        "transliteration": "2.3.5"
    },
    "devDependencies": {
        "@types/fast-levenshtein": "0.0.2",
        "@types/node": "^20.11.17",
        "@vercel/ncc": "^0.38.1",
        "cross-env": "^7.0.3",
        "prettier": "^3.2.5",
        "shx": "^0.3.4",
        "typescript": "^5.3.3"
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}
