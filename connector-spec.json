{
    "name": "Unique Identities",
    "commands": [
        "std:test-connection",
        "std:account:list",
        "std:account:read",
        "std:entitlement:list",
        "std:entitlement:read",
        "std:account:update",
        "std:account:create",
        "std:account:enable",
        "std:account:disable",
        "std:account:discover-schema"
    ],
    "sourceConfig": [
        {
            "type": "menu",
            "label": "Configuration",
            "items": [
                {
                    "type": "section",
                    "sectionTitle": "Configuration details",
                    "sectionHelpMessage": "Add your configuration details here",
                    "items": [
                        {
                            "key": "id",
                            "label": "Source unique ID",
                            "type": "text",
                            "required": true
                        },
                        {
                            "key": "mode",
                            "label": "Connector mode",
                            "type": "radio",
                            "required": true,
                            "options": [
                                {
                                    "label": "Authoritative source",
                                    "value": "authoritative"
                                },
                                {
                                    "label": "Identity merging",
                                    "value": "merging"
                                },
                                {
                                    "label": "Orphan account correlation",
                                    "value": "orphan"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "section",
                    "sectionTitle": "IdentityNow connection details",
                    "sectionHelpMessage": "Add your connection details here",
                    "items": [
                        {
                            "key": "baseurl",
                            "label": "IdentityNow API URL",
                            "type": "url",
                            "required": true
                        },
                        {
                            "key": "clientId",
                            "label": "Personal Access Token ID",
                            "type": "text",
                            "required": true
                        },
                        {
                            "key": "clientSecret",
                            "label": "Personal Access Token secret",
                            "type": "secret",
                            "required": true
                        }
                    ]
                },
                {
                    "type": "section",
                    "sectionTitle": "Authoritative mode configuration",
                    "sectionHelpMessage": "Add your configuration details here",
                    "items": [
                        {
                            "key": "authoritative.template",
                            "label": "Template string for identity",
                            "type": "text"
                        }
                    ]
                },
                {
                    "type": "section",
                    "sectionTitle": "Identity merging mode configuration",
                    "sectionHelpMessage": "Add your configuration details here",
                    "items": [
                        {
                            "key": "merging.attributes",
                            "label": "List of identity attributes to compare similarities",
                            "type": "list"
                        },
                        {
                            "key": "merging.reviewers",
                            "label": "Manual reviewers list (UID)",
                            "type": "list"
                        },
                        {
                            "key": "merging.expirationDays",
                            "label": "Manual review expiration days",
                            "type": "number"
                        },
                        {
                            "key": "merging.score",
                            "label": "Minimum similarity score [0-100] (LIG3 similarity function * 100 from Levenshtein distance)",
                            "type": "number"
                        }
                    ]
                },

                {
                    "type": "section",
                    "sectionTitle": "Orphan account correlation mode configuration",
                    "sectionHelpMessage": "Add your configuration details here",
                    "items": [
                        {
                            "key": "orphan.attributes",
                            "label": "List of identity attributes to compare similarities",
                            "type": "list"
                        },
                        {
                            "key": "orphan.reviewers",
                            "label": "Manual reviewers list (UID)",
                            "type": "list"
                        },
                        {
                            "key": "orphan.expirationDays",
                            "label": "Manual review expiration days",
                            "type": "number"
                        },
                        {
                            "key": "orphan.score",
                            "label": "Minimum similarity score [0-100] (LIG3 similarity function * 100 from Levenshtein distance)",
                            "type": "number"
                        }
                    ]
                }
            ]
        }
    ],
    "accountSchema": {
